<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <com.wiryaimd.mangatranslator.CustomImg
            android:visibility="gone"
            android:id="@+id/main_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

        </com.wiryaimd.mangatranslator.CustomImg>

        <ImageView
            android:id="@+id/main_show"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/main_custom"
            android:layout_margin="12dp"
            android:scaleType="centerCrop">

        </ImageView>

        <Button
            android:id="@+id/main_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_show"
            android:layout_margin="12dp"
            android:text="Choose">

        </Button>

        <Button
            android:id="@+id/main_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="12dp"
            android:text="Save">

        </Button>

        <Button
            android:id="@+id/main_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_choose"
            android:layout_margin="12dp"
            android:text="anjeng">

        </Button>

</RelativeLayout>